@model IEnumerable<EmployeeEclipe.ViewModel.CompanyEmployesViewModel>
@{
    ViewData["Title"] = "EmployeeList";
    Layout = "~/Views/Shared/_LayoutHR.cshtml";
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1 class="m-0">Dashborad</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="#">Employee</a></li>
                    <li class="breadcrumb-item active">Index</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="container">
    <div class="col-md-12">
        <div class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title" style="float: left">List of Employee</h3>
                        <a asp-action="AddEmployee" style="float: right;" class="btn btn-primary btn-sm">Add New AddEmployee</a>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table id="ProDataTable" width="100%" class="table table-bordered table-striped">
                                <thead>
                                    <tr>

                                       <th>Details</th>
                                        
                                        <th>Department Name</th>
                                        <th>Designation</th>
                                        <th>Salary</th>
                                        <th>DOB</th>
                                        <th>Date of Joining</th>
                                        <th>Office User Name</th>
                                        <th>Action</th>
                                        <th>Chat</th>
                                    </tr>

                                </thead>

                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                <br />
                                                <b>Email:</b> @item.Email
                                                <br />
                                                <b>Name:</b>  @item.FullName
                                                <br />
                                                <b>Father Name :</b>   @item.FatherName
                                                <br />
                                                <b> Mother Name : </b>
                                                @item.MotherName

                                            </td>

                                            <td>@item.DepartmentName</td>
                                            <td>@item.Designation</td>
                                            <td>@item.Salary</td>
                                            <td>@item.DateOfBirth.ToString("MM/dd/yyyy")</td>
                                            <td>@item.DateOfjoining.ToString("MM/dd/yyyy")</td>
                                            <td>@item.EmployeeOfficeId</td>
                                            <td>
                                                <a asp-action="EditEmployee" asp-route-EmployeeId="@item.EmployeeId" class="btn btn-warning btn-sm"><i class="fa fa-edit"></i></a>
                                                <a href="javascript:void(0)" onclick="Delete('@item.EmployeeId')" class="btn btn-danger btn-sm"><i class="fa fa-trash"></i></a>

                                            </td>                    
                                            <td>
                                                <a asp-action="Reply" asp-controller="Chat" asp-route-Reply="@item.EmployeeId"> <svg height="30px" width="30px" version="1.1" id="Capa_1" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewBox="0 0 59 59" xml:space="preserve" fill="#000000"><g id="SVGRepo_bgCarrier" stroke-width="0"></g><g id="SVGRepo_tracerCarrier" stroke-linecap="round" stroke-linejoin="round"></g><g id="SVGRepo_iconCarrier"> <g> <path style="fill:#9BC0EA;" d="M1,58l4.988-14.963C3.458,38.78,2,33.812,2,28.5C2,12.76,14.76,0,30.5,0S59,12.76,59,28.5 S46.24,57,30.5,57c-4.789,0-9.299-1.187-13.26-3.273L1,58z"></path> <path style="fill:#B1D2F2;" d="M28.5,31c3.987,0,7.74,0.994,11.028,2.747c5.212,2.779,11.588-0.748,12.31-6.611 c0.208-1.688,0.219-3.438,0.009-5.227C50.691,12.084,42.75,4.203,32.915,3.132C19.959,1.72,9,11.83,9,24.5c0,0.046,0,0.092,0,0.138 c0.037,5.802,5.949,9.804,11.394,7.799C22.921,31.508,25.651,31,28.5,31z"></path> <circle style="fill:#FFFFFF;" cx="17" cy="29" r="3"></circle> <circle style="fill:#FFFFFF;" cx="30" cy="29" r="3"></circle> <circle style="fill:#FFFFFF;" cx="43" cy="29" r="3"></circle> <path style="fill:#87AFD8;" d="M25.976,51.783c-0.12-0.54-0.651-0.877-1.193-0.76l-7.76,1.727c-0.007,0.002-0.012,0.007-0.02,0.009 c-0.006,0.001-0.012,0-0.017,0.001L2.533,56.563l4.403-13.209c0.175-0.524-0.108-1.091-0.632-1.265 c-0.525-0.176-1.091,0.108-1.265,0.632L0.051,57.684c-0.116,0.349-0.032,0.732,0.219,1C0.462,58.889,0.728,59,1,59 c0.085,0,0.17-0.011,0.254-0.033l16.203-4.264l0,0l7.76-1.727C25.756,52.856,26.096,52.322,25.976,51.783z"></path> </g> </g></svg></a>

                                            </td>

                                        </tr>
                                    }

                                </tbody>
                            </table>
                        </div>
                        

                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <script>
        $('#ProDataTable').DataTable({
            autoWidth: false,
            columnDefs: [
                {
                    targets: ['_all'],
                    className: 'mdc-data-table__cell',
                },
            ],

        });

        function Delete(id) {
            swal({
                title: "Are you sure?",
                text: "You will not be able to recover this imaginary file!",
                type: "warning",
                buttons: true,
                dangerMode: true,
            })
                .then((willDelete) => {
                    if (willDelete) {
                        $.ajax({
                            url: "/CompanyEmployes/DeleteEmployee",
                            type: "POST",
                            data: {
                                id: id
                            },
                            dataType: "json",
                            success: function () {
                                swal("Done!", "It was succesfully deleted!", "success");
                                setTimeout(() => {
                                    window.location.href = '../CompanyEmployes/EmployeeList';
                                }, 1000);

                            },
                            error: function (xhr, ajaxOptions, thrownError) {
                                swal("Error deleting!", "Please try again", "error");
                            }
                        });
                    } else {
                        swal("Your imaginary file is safe!");
                    }
                });
        }
    </script>
}
